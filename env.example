# Environment Variables for InnoSTEMLab Website
# Copy this file to .env.local and fill in your actual values

# Email Service Configuration
# Choose one of the following email services:

# Option 1: Resend (Recommended)
RESEND_API_KEY=your_resend_api_key_here

# Option 2: SendGrid
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# Option 3: Gmail (Nodemailer)
# GMAIL_USER=innostemlab@gmail.com
# GMAIL_PASS=your_gmail_app_password_here

# Supabase Database Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Other Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=InnoSTEMLab

# Database (if needed later)
# DATABASE_URL=your_database_url_here

# Payment Processing (if needed later)
# STRIPE_SECRET_KEY=your_stripe_secret_key_here
# STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here 

# Resend Email Configuration for Password Reset
RESEND_API_KEY=re_your_resend_api_key_here

# Base URL for reset links
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Note: To set up Resend:
# 1. Sign up at https://resend.com
# 2. Get your API key from the dashboard
# 3. Add your domain or use the default sender
# 4. Use the API key in RESEND_API_KEY 